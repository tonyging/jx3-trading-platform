# 伺服器運行端口
# 定義應用程式將在哪個端口上監聽傳入的請求
PORT=3000

# MongoDB 連接字串
# 提供資料庫的完整連接地址，包含認證資訊
MONGODB_URI=your_mongodb_connection_string_here

# JWT 安全金鑰
# 用於簽署和驗證 JSON Web Token 的密鑰，務必使用強隨機值
JWT_SECRET=your_secure_jwt_secret_key_here

# 電子郵件服務帳號憑證
# 用於發送系統通知、密碼重設等郵件
EMAIL_USER=your_email_username_here
EMAIL_PASSWORD=your_email_password_here

# Google OAuth 2.0 憑證
# 用於實現 Google 第三方登入功能
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5173/auth/google/callback

# Firebase 專案憑證
# 用於與 Firebase 服務整合，如驗證、雲端服務等
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id_here
FIREBASE_PRIVATE_KEY=your_firebase_private_key_here
FIREBASE_CLIENT_EMAIL=your_firebase_client_email_here
FIREBASE_CLIENT_ID=your_firebase_client_id_here
FIREBASE_CLIENT_CERT_URL=your_firebase_client_cert_url_here